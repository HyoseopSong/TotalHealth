<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExamCategoryActivity"
        android:orientation="vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exam_category_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:background="@color/base_background_color"
            />



        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/fab_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/fab_caption_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="105dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="위치순"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/fab_caption_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="175dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="가나다순"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/fab_caption_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="242dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="검색"
            android:textSize="20dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20.5dp"
            android:layout_marginBottom="17.5dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/location"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20.5dp"
            android:layout_marginBottom="17.5dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/search" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_hangul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20.5dp"
            android:layout_marginBottom="17.5dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ganada"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="13dp"
            app:srcCompat="@drawable/more_vertical"
            android:contentDescription="TODO"

            />
    </FrameLayout>
</layout>
